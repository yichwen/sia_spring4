<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="knight" class="com.sia.knights.BraveKnight">
        <constructor-arg ref="quest"/>
    </bean>

    <!-- the SlayDragonQuest bean declaration uses the Spring Expression Language to pass System.out (which is a PrintStream) -->
    <bean id="quest" class="com.sia.knights.SlayDragonQuest">
        <constructor-arg value="#{T(System).out}"/>
    </bean>

</beans>

